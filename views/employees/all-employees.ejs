<%- include('../partials/header'); -%>
<div class="d-flex justify-content-between align-items-center">
  <h4>Все сотрудники</h4>
  <a href="/employees/create" class="btn btn-outline-primary btn-sm">Добавить сотрудника</a>
</div>
<% if(employees.length === 0) { %>
<div class="alert alert-light">Список пуст</div>
<% } else { %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Имя</th>
      <th scope="col">Логин</th>
      <th scope="col">Почта</th>
      <th scope="col">Роль</th>
      <th scope="col">Создан</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    <% for(const employee of employees) { %>
    <tr>
      <th scope="row"><%=employee.id %></th>
      <td><%=employee.username %></td>
      <td><%=employee.login %></td>
      <td><%=employee.email %></td>
      <td><%=employee.role %></td>
      <td><%=new Date(employee.createdAt).toDateString() %></td>
      <td>
        <form action="/api/employees/delete/<%=employee.id %>" method="post">
          <button type="submit" class="btn btn-outline-danger btn-sm">Удалить</button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
<% } %> <%- include('../partials/footer'); -%>
